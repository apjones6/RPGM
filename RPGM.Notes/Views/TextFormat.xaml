<UserControl
    x:Class="RPGM.Notes.Views.TextFormat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <Style x:Key="ToggleButton" TargetType="ToggleButton">
            <Setter Property="Margin" Value="0,0,14,0" />
            <Setter Property="MinHeight" Value="70" />
            <Setter Property="MinWidth" Value="70" />
        </Style>
    </UserControl.Resources>
    
    <StackPanel Margin="19,30,19,19">
        <TextBlock
            x:Uid="FormatTitle"
            Style="{StaticResource BodyTextBlockStyle}"
            Text="format"
            />
        <GridView>
            <ToggleButton IsChecked="{Binding IsBold, Mode=TwoWay}" Style="{StaticResource ToggleButton}">
                <SymbolIcon Symbol="Bold" />
            </ToggleButton>
            <ToggleButton IsChecked="{Binding IsItalic, Mode=TwoWay}" Style="{StaticResource ToggleButton}">
                <SymbolIcon Symbol="Italic" />
            </ToggleButton>
            <ToggleButton IsChecked="{Binding IsUnderline, Mode=TwoWay}" Style="{StaticResource ToggleButton}">
                <SymbolIcon Symbol="Underline" />
            </ToggleButton>
        </GridView>
    </StackPanel>
</UserControl>
