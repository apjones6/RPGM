<Page
    x:Class="RPGM.Notes.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:a="using:RPGM.Notes.Actions"
    xmlns:cal="using:Caliburn.Micro"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Default">
    
    <Page.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <StackPanel cal:Message.Attach="[Event Tapped] = [Action View($datacontext)]">
                <i:Interaction.Behaviors>
                    <!-- RightTapped is recommended, but it doesn't occur until user releases -->
                    <core:EventTriggerBehavior EventName="Holding">
                        <a:OpenFlyoutAction />
                    </core:EventTriggerBehavior>
                </i:Interaction.Behaviors>

                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <!-- We must break out of the flyout visual tree -->
                        <MenuFlyoutItem
                            x:Uid="DeleteButton"
                            cal:Action.TargetWithoutContext="{Binding DataContext, ElementName=NotesListView}"
                            cal:Message.Attach="Delete($datacontext)"
                            Text="delete"
                            />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>

                <TextBlock
                    Style="{ThemeResource ListViewItemTextBlockStyle}"
                    Text="{Binding Title}"
                    />
                <TextBlock
                    Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"
                    Text="{Binding DateModified, Converter={StaticResource TimeAgoConverter}}"
                    />
            </StackPanel>
        </DataTemplate>
        <Style x:Key="ItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Transitions">
                <Setter.Value>
                    <TransitionCollection>
                        <EntranceThemeTransition IsStaggeringEnabled="True" />
                    </TransitionCollection>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Grid Margin="19,0,0,0">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock
            x:Uid="ApplicationTitle"
            Grid.Row="0"
            FontFamily="{StaticResource PhoneFontFamilySemiBold}"
            Margin="0,12,0,0"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="ROLEPLAY GAME MANAGER"
            />
        <TextBlock
            x:Uid="NotesTitle"
            Grid.Row="1"
            Margin="0,-6.5,0,26.5"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="notes"
            />
        <ListView
            x:Name="NotesListView"
            Grid.Row="2"
            ItemContainerStyle="{StaticResource ItemContainerStyle}"
            ItemsSource="{Binding Notes}"
            ItemTemplate="{StaticResource ItemTemplate}"
            SelectionMode="{Binding IsSelectMode, Converter={StaticResource BoolToSelectionMode}}">
            <i:Interaction.Behaviors>
                <!-- TODO: Tidy this if we can -->
                <core:EventTriggerBehavior EventName="SelectionChanged">
                    <core:ChangePropertyAction
                        PropertyName="SelectedItems"
                        TargetObject="{Binding Mode=OneWay}"
                        Value="{Binding ElementName=NotesListView, Converter={StaticResource ObjectPropertyConverter}, ConverterParameter=SelectedItems}"
                        />
                </core:EventTriggerBehavior>
            </i:Interaction.Behaviors>
        </ListView>
    </Grid>
    
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton
                    x:Name="Add"
                    x:Uid="AppBarAdd"
                    Icon="Add"
                    Label="add"
                    Visibility="{Binding IsNotSelectMode, Converter={StaticResource BoolToVisibility}}"
                    />
                <AppBarButton
                    x:Name="Select"
                    x:Uid="AppBarSelect"
                    Label="select"
                    Visibility="{Binding IsNotSelectMode, Converter={StaticResource BoolToVisibility}}">
                    <AppBarButton.Icon>
                        <!-- Same glyph as for Icon="Bullets", but that doesn't work in WP8.1 at present -->
                        <FontIcon FontFamily="Segoe UI Symbol" Glyph="&#xE133;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton
                    x:Name="DeleteSelected"
                    x:Uid="AppBarDelete"
                    Icon="Delete"
                    Label="delete"
                    Visibility="{Binding IsSelectMode, Converter={StaticResource BoolToVisibility}}"
                    />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
