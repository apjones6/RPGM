<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:RPGM.Notes.Converters"
    xmlns:n="using:RPGM.Notes">
    
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="FlyoutBackgroundThemeBrush" Color="White" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    
    <c:BooleanToUIConverter x:Key="BooleanToUIConverter" />
    <c:ObjectPropertyConverter x:Key="ObjectPropertyConverter" />
    <c:SelectionChangedConverter x:Key="SelectionChangedConverter" />
    <c:TimeAgoConverter x:Key="TimeAgoConverter" />
    <n:Injector x:Key="Injector" />

    <TransitionCollection x:Key="ContinuumTransition">
        <NavigationThemeTransition>
            <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                <ContinuumNavigationTransitionInfo />
            </NavigationThemeTransition.DefaultNavigationTransitionInfo>
        </NavigationThemeTransition>
    </TransitionCollection>

    <TransitionCollection x:Key="EntranceTransition">
        <EntranceThemeTransition />
    </TransitionCollection>

</ResourceDictionary>
