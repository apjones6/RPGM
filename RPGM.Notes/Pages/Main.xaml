<Page
    x:Class="RPGM.Notes.Pages.Main"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:a="using:RPGM.Notes.Actions"
    xmlns:c="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Notes, Source={StaticResource Locator}}">
    
    <Page.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <StackPanel>
                <i:Interaction.Behaviors>
                    <c:EventTriggerBehavior EventName="RightTapped">
                        <a:OpenFlyoutAction />
                    </c:EventTriggerBehavior>
                </i:Interaction.Behaviors>

                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            x:Uid="RenameButton"
                            Command="{Binding Path=DataContext.RenameCommand, ElementName=Page}"
                            CommandParameter="{Binding Id}"
                            Text="rename"
                            />
                        <MenuFlyoutItem
                            x:Uid="DeleteButton"
                            Command="{Binding Path=DataContext.DeleteCommand, ElementName=Page}"
                            CommandParameter="{Binding Id}"
                            Text="delete"
                            />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>

                <TextBlock
                    Style="{ThemeResource ListViewItemTextBlockStyle}"
                    Text="{Binding Title}"
                    />
                <TextBlock
                    Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"
                    Text="{Binding DateCreated, Converter={StaticResource TimeAgoConverter}}"
                    />
            </StackPanel>
        </DataTemplate>

        <Style x:Key="ItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock
                x:Uid="ApplicationTitle"
                FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                Margin="0,12,0,0"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="ROLEPLAY GAME MANAGER"
                />
            <TextBlock
                x:Uid="NotesTitle"
                Margin="0,-6.5,0,26.5"
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="notes"
                />
        </StackPanel>

        <ListView
            Grid.Row="1"
            ItemContainerStyle="{StaticResource ItemContainerStyle}"
            ItemsSource="{Binding Notes}"
            ItemTemplate="{StaticResource ItemTemplate}"
            Margin="19,0,0,0"
            />
    </Grid>
    
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton
                    x:Uid="AppBarAdd"
                    Command="{Binding AddCommand}"
                    Icon="Add"
                    Label="add"
                    />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
